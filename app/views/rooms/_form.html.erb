    <p>
      <%= f.label :status %><br>
      <%= f.select :status, [['Available','Available'],['Booked','Booked'],['Rooom Under Construction','Not']] %>
    </p>
    <p>
      <%= f.submit :"Save Room" %>
    </p>
<% end %>
