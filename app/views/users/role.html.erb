<h1> Profile Update</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, :url => {:action => "managerole"} do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, :disabled=>true, class: 'form-control' %><br>

        <%= f.label :full_name %>
        <%= f.text_field :full_name, class: 'form-control'%><br>

        <%= f.submit 'Save Profile', class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>