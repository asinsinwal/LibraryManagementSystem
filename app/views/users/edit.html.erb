<h1>Personalize</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
        <%= f.label :full_name %>
        <%= f.text_field :full_name, class: 'form-control' %><br>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %><br>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %><br>

        <%= f.label :password_confirm, 'Confirm password' %>
        <%= f.password_field :password_confirm, class: 'form-control'  %><br>

        <%= f.submit 'Save IT', class: 'btn btn-primary'  %>
    <% end %>
  </div>
</div>
